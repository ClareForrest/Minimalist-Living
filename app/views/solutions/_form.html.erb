<%= form_with model: solution, url: problem_solution_path(problem_id), local: true do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :body %>
<%= f.text_area :body %>
<%= f.file_field :image, accept: 'image/png, image/jpg, image/jpeg' %>
<p>pdf <%= f.file_field :document, accept: 'document/pdf' %></p>
<%= f.submit %>
<% end %>